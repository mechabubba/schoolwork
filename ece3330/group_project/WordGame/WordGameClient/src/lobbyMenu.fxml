<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="WordGameClientController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" layoutX="2.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/resources/notebookBackroundLobby.jpg" />
         </image>
      </ImageView>
      <Label fx:id="currentPlayersLabel" layoutX="249.0" layoutY="295.0" text="Current players" />
      <Button fx:id="playButton" layoutX="250.0" layoutY="189.0" mnemonicParsing="false" onAction="#playButtonPressed" prefHeight="58.0" prefWidth="103.0" text="PLAY">
         <font>
            <Font size="25.0" />
         </font>
      </Button>
      <ImageView fitHeight="165.0" fitWidth="225.0" layoutX="189.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/resources/wordBashLogoLobby.png" />
         </image></ImageView>
      <Button fx:id="letterModeButton" layoutX="35.0" layoutY="62.0" mnemonicParsing="false" onAction="#letterModeButtonPressed" text="LetterMode" />
      <Button fx:id="wordModeButton" layoutX="35.0" layoutY="98.0" mnemonicParsing="false" onAction="#wordModeButtonPressed" prefHeight="26.0" prefWidth="93.0" text="WordMode" />
      <Button fx:id="englishButton" layoutX="488.0" layoutY="44.0" mnemonicParsing="false" onAction="#englishButtonPressed" text="English" />
      <Button fx:id="frenchButton" layoutX="488.0" layoutY="106.0" mnemonicParsing="false" onAction="#frenchButtonPressed" prefHeight="26.0" prefWidth="65.0" text="French" />
      <Button fx:id="italianButton" layoutX="488.0" layoutY="75.0" mnemonicParsing="false" onAction="#italianButtonPressed" prefHeight="26.0" prefWidth="65.0" text="Italian" />
      <Label fx:id="languageLabel" layoutX="487.0" layoutY="20.0" text="Language" />
      <Label fx:id="gameModeLabel" layoutX="44.0" layoutY="36.0" text="GameMode" />
   </children>
</AnchorPane>
